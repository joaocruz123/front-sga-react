import { actionTypes } from "../actions/{{name}}";

let {{name}} = JSON.parse(localStorage.getItem('{{name}}'))

const initialState = {
	{{name}}: null,
}

const {{pascalCase name}}Reducer = (state = {{name}} || initialState, action) => {
	let newState = state;
	switch (action.type) {
		case actionTypes.SET_PRODUCTS_PROMOTIONS: {
			newState = {
				...state,
				{{name}}: action.payload,
			};

			break;
		}

		default: {
			newState = state;

			break;
		}
	}
	if (newState) {
		localStorage.setItem('{{name}}', JSON.stringify(newState));
	} else {
		localStorage.removeItem('{{name}}')
	}
	return newState
};

export default {{pascalCase name}}Reducer;
